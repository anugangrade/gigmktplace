      <ul class="nav navbar-nav dropdown">
        <li>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Select Category <span class="caret"></span></a>
          <ul class="sub_menu dropdown-menu">
            <% all_categories.each do |category|%>  
              <li><%= link_to category, home_index_path(search_by: category) %>
                <% @subcategory=Category.where("title LIKE ?", "%#{category}%") %>
                  <ul>
                    <li><b> <%= category %> </b></li>
                    <% @subcategory.each do |subcategory| %>  
                      <li><%= link_to subcategory.subtitle, home_index_path(search_by: subcategory.id) %></li>
                    <% end %>  
                  </ul>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <form class="navbar-form navbar-right" role="search">
            <li class="form-group" >
