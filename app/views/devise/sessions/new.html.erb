
<div class="col-lg-12 wh_col">
  <h3 class="cr_gig">Sign in</h3> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="full_gig_blog top_80">
      <div class="labels">EMAIL</div>
      <div class="fields">
        <%= f.email_field :email, autofocus: true, :placeholder=>"Email" , :class=>"form-control" %>
      </div>
    </div><!--full_blog-->

    <div class="full_gig_blog">
      <div class="labels">PASSWORD</div>
      <div class="fields">
        <%= f.password_field :password, :placeholder=>"********", :class=>"form-control" %>
      </div>
    </div><!--full_blog-->

    <div class="full_gig_blog">
      <% if devise_mapping.rememberable? -%>
	    <div class="fields"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>
    </div><!--full_blog-->


    <div class="full_gig_blog">
      <div class="fields">
        <%= f.submit "Sign In", :class=>"btn btn-success" %> OR <%= render "devise/shared/links" %>
      </div>
    </div><!--full_blog-->
  <% end %>
  
</div><!-- 9 col-->   


